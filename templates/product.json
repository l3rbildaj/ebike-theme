    "custom_liquid_4Xpzpy": {
      "type": "custom-liquid",
      "name": "t:sections.custom-liquid.presets.name",
      "settings": {
        "custom_liquid": "<!-- Full Suspension section -->\n<section class=\"draemora-suspension\">\n  <div class=\"draemora-suspension__inner\">\n\n    <!-- TEXT (LEFT on desktop, BELOW on mobile) -->\n    <div class=\"draemora-suspension__content\">\n      <h2 class=\"draemora-suspension__title\">Full Suspension. Full Control.</h2>\n\n      <p class=\"draemora-suspension__desc\">\n        Whether you're carving through city streets or tackling rugged trails, the dual-shock setup\n        delivers a ride that’s not just comfortable—but confidently controlled.\n      </p>\n    </div>\n\n    <!-- IMAGE (RIGHT on desktop, TOP on mobile) -->\n    <div class=\"draemora-suspension__media\">\n      <img src=\"https://cdn.shopify.com/s/files/1/0918/6135/2781/files/xg.webp?v=1766588204\" alt=\"Full suspension detail\" class=\"draemora-suspension__img\" loading=\"lazy\">\n    </div>\n\n  </div>\n</section>\n\n<style>\n/* =========================\n   FULL SUSPENSION SECTION\n   ========================= */\n.draemora-suspension{\n  background:#fff;\n  font-family:-apple-system,BlinkMacSystemFont,\"Segoe UI\",Arial,sans-serif;\n}\n\n.draemora-suspension__inner{\n  width:100%;\n  display:grid;\n  grid-template-columns: 0.9fr 1.1fr; /* TEXT | IMAGE */\n  align-items:center;\n  gap:48px;\n  min-height:520px;\n  padding:44px 24px;\n  box-sizing:border-box;\n}\n\n/* TEXT */\n.draemora-suspension__content{\n  max-width:520px;\n}\n\n.draemora-suspension__title{\n  margin:0 0 18px;\n  font-size:clamp(34px,4.2vw,62px);\n  font-weight:800;\n  letter-spacing:-0.02em;\n  line-height:1.05;\n  color:rgba(0,0,0,0.16);\n}\n\n.draemora-suspension__desc{\n  margin:0;\n  font-size:16px;\n  line-height:1.75;\n  color:#333;\n}\n\n/* IMAGE */\n.draemora-suspension__media{\n  display:flex;\n  align-items:center;\n  justify-content:center;\n  padding:12px; /* prevents edge-sticking */\n}\n\n.draemora-suspension__img{\n  width:100%;\n  height:auto;\n  max-width:1100px;\n  object-fit:contain;\n  display:block;\nborder-radius:20px;\n}\n\n/* =========================\n   MOBILE — IMAGE ON TOP\n   ========================= */\n@media (max-width:1024px){\n  .draemora-suspension__inner{\n    grid-template-columns:1fr;\n    padding:32px 16px;\n    gap:24px;\n    min-height:auto;\n  }\n\n  /* IMAGE FIRST (TOP) */\n  .draemora-suspension__media{\n    order:-1;\n    padding:0;\n  }\n\n  .draemora-suspension__content{\n    margin:0 auto;\n    text-align:center;\n    max-width:680px;\n  }\n\n  .draemora-suspension__title{\n    font-size:32px;\n    margin-bottom:12px;\n  }\n\n  .draemora-suspension__desc{\n    font-size:15px;\n    line-height:1.7;\n  }\n}\n</style>"
      }
    },
    "custom_liquid_yBBjbK": {
      "type": "custom-liquid",
      "name": "t:sections.custom-liquid.presets.name",
      "settings": {
        "custom_liquid": "<section class=\"draemora-nfc\">\n  <div class=\"draemora-nfc__inner\">\n\n    <!-- IMAGE (LEFT on desktop, TOP on mobile) -->\n    <div class=\"draemora-nfc__media\">\n      <img src=\"https://cdn.shopify.com/s/files/1/0918/6135/2781/files/NFC.webp?v=1766589649\" alt=\"NFC Smart Start Display\" class=\"draemora-nfc__img\" loading=\"lazy\">\n    </div>\n\n    <!-- TEXT -->\n    <div class=\"draemora-nfc__content\">\n      <h2 class=\"draemora-nfc__title\">Smart Start with NFC Technology.</h2>\n\n      <p class=\"draemora-nfc__lead\">\n        Unlock and power up your BG-S PRO with just a tap.\n      </p>\n\n      <p class=\"draemora-nfc__desc\">\n        No keys, no apps—just seamless access. Our integrated NFC system lets you start your\n        ride in seconds while keeping it secure from unauthorized use.\n      </p>\n    </div>\n\n  </div>\n</section>\n\n<style>\n/* =========================\n   NFC SECTION\n   ========================= */\n.draemora-nfc{\n  background:#fff;\n  font-family:-apple-system,BlinkMacSystemFont,\"Segoe UI\",Arial,sans-serif;\n}\n\n.draemora-nfc__inner{\n  width:100%;\n  display:grid;\n  grid-template-columns: 1.1fr 0.9fr; /* IMAGE | TEXT */\n  align-items:center;\n  min-height:540px;\n}\n\n/* IMAGE SIDE */\n.draemora-nfc__media{\n  display:flex;\n  align-items:center;\n  justify-content:center;\n}\n\n.draemora-nfc__img{\n  width:100%;\n  max-width:720px;\n  height:auto;\n  display:block;\n  object-fit:contain;\nborder-radius:20px;\n}\n\n/* TEXT SIDE */\n.draemora-nfc__content{\n  padding:80px 72px;\n  text-align:center;\n}\n\n.draemora-nfc__title{\n  margin:0 0 14px;\n  font-size:clamp(32px,4vw,56px);\n  font-weight:800;\n  letter-spacing:-0.02em;\n  line-height:1.05;\n  color:rgba(0,0,0,0.16);\n}\n\n.draemora-nfc__lead{\n  margin:0 0 14px;\n  font-size:17px;\n  font-weight:600;\n  color:#111;\n}\n\n.draemora-nfc__desc{\n  margin:0 auto;\n  max-width:520px;\n  font-size:16px;\n  line-height:1.75;\n  color:#333;\n}\n\n/* =========================\n   MOBILE — IMAGE ON TOP\n   ========================= */\n@media (max-width: 1024px){\n  .draemora-nfc__inner{\n    grid-template-columns:1fr;\n    min-height:auto;\n  }\n\n  .draemora-nfc__media{\n    padding:24px;\n  }\n\n  .draemora-nfc__content{\n    padding:36px 18px 44px;\n  }\n\n  .draemora-nfc__title{\n    font-size:30px;\n    margin-bottom:10px;\n  }\n\n  .draemora-nfc__lead{\n    font-size:15px;\n  }\n\n  .draemora-nfc__desc{\n    font-size:15px;\n    line-height:1.7;\n  }\n}\n</style>"
      }
    },
    "custom_liquid_mC3YYg": {
      "type": "custom-liquid",
      "name": "t:sections.custom-liquid.presets.name",
      "settings": {
        "custom_liquid": "<!-- Lightweight / Rigid section (image top, text centered) -->\n<section class=\"draemora-frame\">\n  <div class=\"draemora-frame__inner\">\n\n    <div class=\"draemora-frame__media\">\n      <img src=\"https://bigniubike.com/cdn/shop/files/3.png?v=1765249510&amp;width=1000\" alt=\"Frame detail\" class=\"draemora-frame__img\" loading=\"lazy\">\n    </div>\n\n    <h2 class=\"draemora-frame__title\">Lightweight. Rigid. Built to Last.</h2>\n\n    <p class=\"draemora-frame__desc\">\n      The BG-S PRO’s frame is crafted from high-grade aluminum alloy—engineered for strength, precision,\n      and durability without the weight penalty of steel. Every weld, curve, and joint is designed to deliver\n      unmatched riding stability and long-term reliability.\n    </p>\n\n  </div>\n</section>\n\n<style>\n  /* =========================\n     FRAME SECTION\n     ========================= */\n  .draemora-frame{\n    background:#fff;\n    padding: 70px 18px 76px;\n    font-family:-apple-system,BlinkMacSystemFont,\"Segoe UI\",Arial,sans-serif;\n    text-align:center;\n  }\n\n  .draemora-frame__inner{\n    max-width: 1000px;\n    margin: 0 auto;\n  }\n\n  .draemora-frame__media{\n    display:flex;\n    justify-content:center;\n    align-items:center;\n    margin-bottom: 28px;\n  }\n\n  .draemora-frame__img{\n    width: min(920px, 100%);\n    height: auto;\n    display:block;\n    object-fit: contain;\n  }\n\n  .draemora-frame__title{\n    margin: 0 0 12px;\n    font-size: clamp(34px, 4.4vw, 58px);\n    font-weight: 800;\n    letter-spacing: -0.02em;\n    line-height: 1.05;\n\n    /* soft grey like reference */\n    color: rgba(0,0,0,0.16);\n  }\n\n  .draemora-frame__desc{\n    margin: 0 auto;\n    max-width: 720px;\n    font-size: 16px;\n    line-height: 1.8;\n    color: #333;\n  }\n\n  /* Mobile */\n  @media (max-width: 768px){\n    .draemora-frame{\n      padding: 44px 14px 52px;\n    }\n\n    .draemora-frame__media{\n      margin-bottom: 18px;\n    }\n\n    .draemora-frame__title{\n      font-size: 30px;\n      margin-bottom: 10px;\n    }\n\n    .draemora-frame__desc{\n      font-size: 15px;\n      line-height: 1.7;\n    }\n  }\n</style>"
      }
    },
    "custom_liquid_zUR7AK": {
      "type": "custom-liquid",
      "name": "t:sections.custom-liquid.presets.name",
      "settings": {
        "custom_liquid": "<!-- Handlebar Feature Section (image top, centered text) -->\n<section class=\"draemora-handlebar\">\n  <div class=\"draemora-handlebar__inner\">\n\n    <div class=\"draemora-handlebar__media\">\n      <img src=\"https://bigniubike.com/cdn/shop/files/cb.png?v=1765249886&amp;width=1750\" alt=\"Off-road wide handlebar\" class=\"draemora-handlebar__img\" loading=\"lazy\">\n    </div>\n\n    <h2 class=\"draemora-handlebar__title\">Off-Road Wide Handlebar</h2>\n\n    <p class=\"draemora-handlebar__desc\">\n      The wide-profile design increases steering leverage, keeping the bike stable, precise, and agile\n      even on challenging terrains such as gravel, slopes, and forest trails.\n    </p>\n\n  </div>\n</section>\n\n<style>\n/* =========================\n   HANDLEBAR SECTION\n   ========================= */\n.draemora-handlebar{\n  background:#fff;\n  padding: 72px 18px 78px;\n  text-align:center;\n  font-family:-apple-system,BlinkMacSystemFont,\"Segoe UI\",Arial,sans-serif;\n}\n\n.draemora-handlebar__inner{\n  max-width: 1100px;\n  margin: 0 auto;\n}\n\n.draemora-handlebar__media{\n  display:flex;\n  justify-content:center;\n  align-items:center;\n  margin: 0 auto 22px;\n}\n\n.draemora-handlebar__img{\n  width: 100%;\n  max-width: 980px;\n  height: auto;\n  display:block;\n  object-fit: contain;\n}\n\n/* Title matches soft grey style */\n.draemora-handlebar__title{\n  margin: 0 0 12px;\n  font-size: clamp(30px, 4.2vw, 56px);\n  font-weight: 800;\n  letter-spacing: -0.02em;\n  line-height: 1.05;\n  color: rgba(0,0,0,0.16);\n}\n\n.draemora-handlebar__desc{\n  margin: 0 auto;\n  max-width: 820px;\n  font-size: 16px;\n  line-height: 1.8;\n  color: #333;\n}\n\n/* Mobile */\n@media (max-width: 768px){\n  .draemora-handlebar{\n    padding: 44px 14px 52px;\n  }\n\n  .draemora-handlebar__media{\n    margin-bottom: 14px;\n  }\n\n  .draemora-handlebar__title{\n    font-size: 28px;\n    margin-bottom: 10px;\n  }\n\n  .draemora-handlebar__desc{\n    font-size: 15px;\n    line-height: 1.7;\n  }\n}\n</style>"
      }
    },
    "custom_liquid_YYxgnp": {
      "type": "custom-liquid",
      "name": "t:sections.custom-liquid.presets.name",
      "settings": {
        "custom_liquid": "<section class=\"draemora-details\">\n  <div class=\"draemora-details__inner\">\n    <div class=\"draemora-details__titleRow\">\n      <h2 class=\"draemora-details__title\">Product details</h2>\n    </div>\n\n    <div class=\"draemora-details__layout\">\n      <!-- LEFT: ACCORDIONS -->\n      <div class=\"draemora-details__left\">\n        <div class=\"draemora-acc\">\n\n          <!-- Basic Information (OPEN BY DEFAULT) -->\n          <details class=\"draemora-acc__item\" open=\"\">\n            <summary class=\"draemora-acc__summary\">\n              <span class=\"draemora-acc__label\">Basic Information</span>\n              <span class=\"draemora-acc__icon\" aria-hidden=\"true\">\n                <svg viewBox=\"0 0 14 14\" fill=\"none\" stroke=\"currentColor\" xmlns=\"http://www.w3.org/2000/svg\">\n                  <path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"M7 1V13M13 7H1\"></path>\n                </svg>\n              </span>\n            </summary>\n\n            <div class=\"draemora-acc__content\">\n              <p>\n                <strong>Model:</strong>BG-S PRO<br>\n                <strong>Net Weight:</strong> 111.33 lb<br>\n                <strong>Gross Weight (with carton):</strong> 129.0 lb<br>\n                <strong>Carton Dimensions:</strong> 60.6 × 11.8 × 34.3 in<br>\n                <strong>Overall Dimensions:</strong> 183*72*111.5CM<br>\n                <strong>Max Speed:</strong> 45 MPH<br>\n                <strong>Range: Pure Electric Range:</strong> 29.20 miles<br>\n                <strong>Maximum Range with Assist:</strong> 35.42 miles<br>\n                <strong>Available Colors:</strong> Black, Green, Purple, Orange<br>\n                <strong>Gears:</strong> 5\n              </p>\n            </div>\n          </details>\n\n          <!-- Vehicle Body Information -->\n          <details class=\"draemora-acc__item\">\n            <summary class=\"draemora-acc__summary\">\n              <span class=\"draemora-acc__label\">Vehicle Body Information</span>\n              <span class=\"draemora-acc__icon\" aria-hidden=\"true\">\n                <svg viewBox=\"0 0 14 14\" fill=\"none\" stroke=\"currentColor\" xmlns=\"http://www.w3.org/2000/svg\">\n                  <path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"M7 1V13M13 7H1\"></path>\n                </svg>\n              </span>\n            </summary>\n\n            <div class=\"draemora-acc__content\">\n              <p>\n                <strong>Frame Material:</strong> Aluminum Alloy<br>\n                <strong>Suspension:</strong> Inverted Forks<br>\n                <strong>Bicycle Length:</strong> 72.0in<br>\n                <strong>Bicycle Height:</strong> 43.90in<br>\n                <strong>Handle Length:</strong> 28.35in<br>\n                <strong>Handle to Seat Distance:</strong> 23.62in<br>\n                <strong>Saddle Height:</strong> 32.28in<br>\n                <strong>Tire Size:</strong> 19 inches<br>\n                <strong>Wheelbase:</strong> 47.83in<br>\n                <strong>Recommended Riding Height:</strong> 5'4–6'6\" (ft)<br>\n                <strong>Maximum Weight Capacity:</strong> 330 LBS\n              </p>\n            </div>\n          </details>\n\n          <!-- Motor parameters -->\n          <details class=\"draemora-acc__item\">\n            <summary class=\"draemora-acc__summary\">\n              <span class=\"draemora-acc__label\">Motor parameters</span>\n              <span class=\"draemora-acc__icon\" aria-hidden=\"true\">\n                <svg viewBox=\"0 0 14 14\" fill=\"none\" stroke=\"currentColor\" xmlns=\"http://www.w3.org/2000/svg\">\n                  <path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"M7 1V13M13 7H1\"></path>\n                </svg>\n              </span>\n            </summary>\n\n            <div class=\"draemora-acc__content\">\n              <p>\n                <strong>Rated voltage:</strong> 60V<br>\n                <strong>Rated motor power:</strong> 3000W<br>\n                <strong>Output torque:</strong> 120 Nm<br>\n                <strong>Maximum power:</strong> 3000W\n              </p>\n            </div>\n          </details>\n\n          <!-- Battery Pack Specifications -->\n          <details class=\"draemora-acc__item\">\n            <summary class=\"draemora-acc__summary\">\n              <span class=\"draemora-acc__label\">Battery Pack Specifications</span>\n              <span class=\"draemora-acc__icon\" aria-hidden=\"true\">\n                <svg viewBox=\"0 0 14 14\" fill=\"none\" stroke=\"currentColor\" xmlns=\"http://www.w3.org/2000/svg\">\n                  <path stroke-linecap=\"round\" stroke-linejoin=\"round\" d=\"M7 1V13M13 7H1\"></path>\n                </svg>\n              </span>\n            </summary>\n\n            <div class=\"draemora-acc__content\">\n              <p>\n                <strong>Rated capacity:</strong> 32AH<br>\n                <strong>Rated voltage:</strong> 60V<br>\n                <strong>Battery weight:</strong> 14.8 lb<br>\n                <strong>Maximum charging voltage:</strong> 67.2V<br>\n                <strong>Charging time:</strong> 5–7 hours\n              </p>\n            </div>\n          </details>\n\n        </div>\n      </div>\n\n      <!-- RIGHT: INCLUDED IN THE BOX -->\n      <aside class=\"draemora-details__right\">\n        <div class=\"draemora-boxCard\">\n          <!-- top “handle” svg -->\n          <svg class=\"draemora-boxCard__top\" viewBox=\"0 0 234 74\" fill=\"none\" xmlns=\"http://www.w3.org/2000/svg\" aria-hidden=\"true\">\n            <path d=\"M0 20C0 8.95431 8.95431 0 20 0H214C225.046 0 234 8.9543 234 20V74H0V20Z\" fill=\"currentColor\"></path>\n            <rect x=\"58\" y=\"32\" width=\"118\" height=\"19\" rx=\"9.5\" class=\"draemora-boxCard__fill\"></rect>\n            <circle cx=\"117.5\" cy=\"32.5\" r=\"11.5\" class=\"draemora-boxCard__fill\"></circle>\n          </svg>\n\n          <h3 class=\"draemora-boxCard__title\">Included in the Box</h3>\n\n          <ul class=\"draemora-boxList\">\n            <li class=\"draemora-boxItem\">\n              <div class=\"draemora-boxItem__icon\">\n                <img src=\"https://bigniubike.com/cdn/shop/files/8_b0a95220-8293-459d-8656-35f887cbe7c4.png?v=1765251096&amp;width=200\" alt=\"Bike\" loading=\"lazy\">\n              </div>\n              <p class=\"draemora-boxItem__label\">Bike</p>\n            </li>\n\n            <li class=\"draemora-boxItem\">\n              <div class=\"draemora-boxItem__icon\">\n                <img src=\"https://bigniubike.com/cdn/shop/files/5_aa1e03d3-f89f-4dd9-9f85-1e526ac3c1f4.png?v=1765251096&amp;width=200\" alt=\"Charger\" loading=\"lazy\">\n              </div>\n              <p class=\"draemora-boxItem__label\">Charger</p>\n            </li>\n\n            <li class=\"draemora-boxItem\">\n              <div class=\"draemora-boxItem__icon\">\n                <img src=\"https://bigniubike.com/cdn/shop/files/9_6345b391-6e85-45fc-b2c2-08484dfb03eb.png?v=1765251097&amp;width=200\" alt=\"Manual\" loading=\"lazy\">\n              </div>\n              <p class=\"draemora-boxItem__label\">Manual</p>\n            </li>\n\n            <li class=\"draemora-boxItem\">\n              <div class=\"draemora-boxItem__icon\">\n                <img src=\"https://bigniubike.com/cdn/shop/files/4_65d8c718-8121-4bcb-b217-23cbc21c5aef.png?v=1765251096&amp;width=200\" alt=\"Toolkit\" loading=\"lazy\">\n              </div>\n              <p class=\"draemora-boxItem__label\">Toolkit</p>\n            </li>\n          </ul>\n        </div>\n      </aside>\n    </div>\n  </div>\n</section>\n\n<style>\n/* =========================\n   WRAPPER\n   ========================= */\n.draemora-details{\n  font-family:-apple-system,BlinkMacSystemFont,\"Segoe UI\",Arial,sans-serif;\n  background:#fff;\n  padding: 36px 0 70px;\n  color:#111;\n}\n\n.draemora-details__inner{\n  width:min(1200px, calc(100% - 48px));\n  margin:0 auto;\n}\n\n.draemora-details__titleRow{\n  display:flex;\n  align-items:flex-end;\n  justify-content:space-between;\n  gap:16px;\n  margin-bottom: 22px;\n}\n\n.draemora-details__title{\n  font-size: clamp(36px, 5vw, 56px);\n  font-weight: 800;\n  letter-spacing:-0.02em;\n  margin:0;\n}\n\n.draemora-details__layout{\n  display:grid;\n  grid-template-columns: 1.35fr 0.65fr;\n  gap: 30px;\n  align-items:start;\n}\n\n/* =========================\n   ACCORDION\n   ========================= */\n.draemora-acc{\n  border-top: 1px solid rgba(0,0,0,0.08);\n}\n\n.draemora-acc__item{\n  border-bottom: 1px solid rgba(0,0,0,0.08);\n  padding: 18px 0;\n}\n\n.draemora-acc__summary{\n  list-style:none;\n  display:flex;\n  align-items:center;\n  justify-content:space-between;\n  gap:16px;\n  cursor:pointer;\n  user-select:none;\n}\n\n.draemora-acc__summary::-webkit-details-marker{ display:none; }\n\n.draemora-acc__label{\n  font-size: 18px;\n  font-weight: 600;\n}\n\n.draemora-acc__icon{\n  width: 18px;\n  height: 18px;\n  display:grid;\n  place-items:center;\n  color:#111;\n  transition: transform .18s ease;\n}\n\n.draemora-acc__icon svg{\n  width: 18px;\n  height: 18px;\n}\n\n.draemora-acc__item[open] .draemora-acc__icon{\n  transform: rotate(45deg); /* plus -> x */\n}\n\n.draemora-acc__content{\n  padding: 14px 0 4px;\n  color:#5b5b5b;\n  font-size: 15px;\n  line-height: 1.75;\n}\n\n.draemora-acc__content p{\n  margin:0;\n}\n\n/* =========================\n   BOX CARD\n   ========================= */\n.draemora-boxCard{\n  position: sticky;\n  top: 18px;\n  border-radius: 18px;\n  background: #f6f6f6;\n  padding: 26px 22px 22px;\n  text-align:center;\n}\n\n.draemora-boxCard__top{\n  width: 100%;\n  max-width: 270px;\n  margin: 0 auto 14px;\n  display:block;\n  color:#111; /* handle shape */\n}\n\n.draemora-boxCard__fill{\n  fill:#f6f6f6; /* cutout color */\n}\n\n.draemora-boxCard__title{\n  margin: 0 0 18px;\n  font-size: 26px;\n  font-weight: 800;\n  letter-spacing: -0.02em;\n}\n\n/* items */\n.draemora-boxList{\n  margin: 0;\n  padding: 0;\n  list-style:none;\n  display:flex;\n  flex-wrap:wrap;\n  gap: 18px 22px;\n  justify-content:center;\n}\n\n.draemora-boxItem{\n  width: 92px;\n  display:grid;\n  gap: 10px;\n  justify-items:center;\n}\n\n.draemora-boxItem__icon{\n  width: 76px;\n  height: 76px;\n  border-radius: 999px;\n  background:#fff;\n  display:grid;\n  place-items:center;\n  box-shadow: 0 1px 0 rgba(0,0,0,0.06);\n}\n\n.draemora-boxItem__icon img{\n  width: 40px;\n  height: 40px;\n  object-fit: contain;\n  display:block;\n}\n\n.draemora-boxItem__label{\n  margin:0;\n  font-size: 13px;\n  color:#222;\n}\n\n/* =========================\n   RESPONSIVE\n   ========================= */\n@media (max-width: 980px){\n  .draemora-details__layout{\n    grid-template-columns: 1fr;\n    gap: 18px;\n  }\n\n  .draemora-boxCard{\n    position: static;\n    top:auto;\n  }\n\n  .draemora-details__inner{\n    width:min(1200px, calc(100% - 28px));\n  }\n}\n\n@media (max-width: 520px){\n  .draemora-acc__label{ font-size:16px; }\n  .draemora-boxCard__title{ font-size:22px; }\n  .draemora-boxItem{ width: 86px; }\n  .draemora-boxItem__icon{ width: 70px; height: 70px; }\n}\n</style>"
