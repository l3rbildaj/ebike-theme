    "custom_liquid_dDcJHk": {
      "type": "custom-liquid",
      "name": "t:sections.custom-liquid.presets.name",
      "settings": {
        "custom_liquid": "<section class=\"draemora-split\">\n  <div class=\"draemora-split__inner\">\n\n    <!-- Left: Image -->\n    <div class=\"draemora-split__media\">\n      <img src=\"https://cdn.shopify.com/s/files/1/0918/6135/2781/files/battery_d69b6a98-9269-4b9a-a587-a0be384c0eeb.webp?v=1766573500\" alt=\"Battery close-up\" class=\"draemora-split__img\" loading=\"lazy\">\n    </div>\n\n    <!-- Right: Content -->\n    <div class=\"draemora-split__content\">\n      <h2 class=\"draemora-split__title\">29+ Mile Range.</h2>\n\n      <div class=\"draemora-split__meta\">60V/32Ah Battery | 29+ Mile Range</div>\n\n      <p class=\"draemora-split__desc\">\n        The <strong>BG-S PRO</strong> is equipped with a 60V/32Ah battery, delivering\n        an impressive real-world range of up to 29 miles on a single charge. Whether you're\n        commuting to work or exploring off-road trails, you can ride with confidence — no need\n        to worry about running out of power.\n      </p>\n    </div>\n\n  </div>\n</section>\n\n<style>\n  /* =========================\n     SPLIT SECTION\n     ========================= */\n  .draemora-split{\n    background: #fff;\n    padding: 0;\n    font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Arial, sans-serif;\n  }\n\n  .draemora-split__inner{\n    width: 100%;\n    display: grid;\n    grid-template-columns: 1fr 1fr;\n    min-height: 520px;\n  }\n\n  /* Left image side */\n  .draemora-split__media{\n    padding: 22px;                 /* keeps image away from edges */\n    box-sizing: border-box;\n    display: flex;\n    align-items: center;\n    justify-content: center;\n    background: #fff;\n  }\n\n  .draemora-split__img{\n    width: 100%;\n    height: 100%;\n    max-height: 520px;\n    object-fit: cover;\n    border-radius: 22px;           /* rounded borders */\n    display: block;\n  }\n\n  /* Right content side */\n  .draemora-split__content{\n    padding: 84px 64px;\n    box-sizing: border-box;\n    display: flex;\n    flex-direction: column;\n    justify-content: center;\n    text-align: center;\n  }\n\n  .draemora-split__title{\n    margin: 0 0 12px;\n    font-size: clamp(34px, 4.2vw, 58px);\n    font-weight: 800;\n    letter-spacing: -0.02em;\n\n    /* soft grey title like screenshot */\n    color: rgba(0,0,0,0.15);\n  }\n\n  .draemora-split__meta{\n    font-size: 15px;\n    font-weight: 700;\n    color: #111;\n    margin-bottom: 18px;\n  }\n\n  .draemora-split__desc{\n    margin: 0 auto;\n    max-width: 520px;\n    font-size: 16px;\n    line-height: 1.75;\n    color: #333;\n  }\n\n  /* =========================\n     RESPONSIVE\n     ========================= */\n  @media (max-width: 1024px){\n    .draemora-split__content{\n      padding: 64px 40px;\n    }\n  }\n\n  @media (max-width: 860px){\n    .draemora-split__inner{\n      grid-template-columns: 1fr;\n      min-height: auto;\n    }\n\n    .draemora-split__media{\n      padding: 16px;\n    }\n\n    .draemora-split__img{\n      max-height: 380px;\n      border-radius: 18px;\n    }\n\n    .draemora-split__content{\n      padding: 36px 18px 44px;\n      text-align: center;\n    }\n\n    .draemora-split__meta{\n      font-size: 14px;\n    }\n\n    .draemora-split__desc{\n      font-size: 15px;\n      line-height: 1.7;\n    }\n  }\n</style>"
      }
