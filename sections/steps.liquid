{{ 'section-steps.css' | asset_url | stylesheet_tag }}
<script src="{{ 'steps.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% render 'section-margin' %}
  {% render 'section-padding' %}
{% endstyle %}

<div class="steps color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding">
  <div class="container">
    {% render 'heading-group', section: section, class: 'steps', text_align: section.settings.text_align %}

    <div class="steps__wrapper content">
      <div class="steps__items">
        {%- for block in section.blocks -%}
          <div
            class="steps__item{% if forloop.index == 1 %} steps__item--active{% endif %}"
            data-step-id="{{ block.id }}"
            tabindex="0"
            {{ block.shopify_attributes }}
          >
            <h5 class="steps__item-heading">
              {%- if block.settings.step_heading != blank -%}
                {{- block.settings.step_heading | truncate: 140 -}}
              {%- else -%}
                {{- 'sections.steps.default_step' | t: number: forloop.index -}}
              {%- endif -%}
            </h5>
            {%- if block.settings.step_description != blank -%}
              <div class="steps__item-description body-small">
                {{- block.settings.step_description | truncate: 140 -}}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
        <div class="steps__items-line"></div>
      </div>

      <div class="steps__contents">
        {%- for block in section.blocks -%}
          <div
            class="steps__content{% if forloop.first == false %} steps__content--with-pd-top{% endif %}"
            data-step-id="{{ block.id }}"
            {{ block.shopify_attributes }}
          >
            <div class="steps__content-mobile">
              <h5 class="steps__item-heading">
                {%- if block.settings.step_heading != blank -%}
                  {{- block.settings.step_heading | truncate: 140 -}}
                {%- else -%}
                  {{- 'sections.steps.default_step' | t: number: forloop.index -}}
                {%- endif -%}
              </h5>
              {%- if block.settings.step_description != blank -%}
                <div class="steps__item-description body-small">
                  {{- block.settings.step_description | truncate: 140 -}}
                </div>
              {%- endif -%}
            </div>

            {%- if block.settings.content_image != blank -%}
              {% liquid
                if block.settings.content_image_ratio != 'adapt'
                  assign aspect_ratio = block.settings.content_image_ratio | split: '/'
                  assign temp = aspect_ratio[0] | append: '.0'
                  assign padding_bottom = aspect_ratio[1] | divided_by: temp | times: 100 | round: 2

                  assign temp_2 = aspect_ratio[1] | append: '.0'
                  assign settings_aspect_ratio = temp | divided_by: temp_2 | round: 2
                elsif block.settings.content_image_ratio == 'adapt'
                  assign padding_bottom = 1 | divided_by: block.settings.content_image.aspect_ratio | times: 100 | round: 2
                  assign settings_aspect_ratio = block.settings.content_image.aspect_ratio | round: 2
                else
                  assign padding_bottom = 0
                endif

                assign fetch_priority = 'auto'
                assign image_loading = 'lazy'
                if section.index == 1 and forloop.first
                  assign fetch_priority = 'high'
                  assign image_loading = 'eager'
                endif

                assign calc_ratio = 1
                if block.settings.content_image.aspect_ratio > settings_aspect_ratio
                  assign calc_ratio = block.settings.content_image.aspect_ratio | divided_by: settings_aspect_ratio | round: 2
                endif
              %}
              {%- capture img_sizes -%}
                (min-width: 1440px) calc(956px * {{ calc_ratio }}), (min-width: 990px) calc(73vw * {{ calc_ratio }}), calc(100vw * {{ calc_ratio }})
              {%- endcapture -%}
              <div
                class="steps__content-image"
                style="--padding_bottom: {{ padding_bottom }}%; --focal_point: {{ block.settings.content_image.presentation.focal_point }};"
              >
                {{
                  block.settings.content_image
                  | image_url: width: block.settings.content_image.width
                  | image_tag:
                    class: 'steps__content-image-item',
                    loading: image_loading,
                    sizes: img_sizes,
                    widths: '550, 720, 990, 1200, 1500, 1800, 2200, 2600, 3000',
                    fetchpriority: fetch_priority
                }}
              </div>
            {%- endif -%}

            {%- if block.settings.content_heading != blank
              or block.settings.content_description != blank
              or block.settings.show_button
            -%}
              <div class="steps__content-inner">
                {%- if block.settings.content_heading != blank or block.settings.content_description != blank -%}
                  <div class="steps__content-text">
                    {%- if block.settings.content_heading != blank -%}
                      <h3 class="steps__content-heading">
                        {{- block.settings.content_heading -}}
                      </h3>
                    {%- endif -%}
                    {%- if block.settings.content_description != blank -%}
                      <div class="steps__content-description rte {% if settings.rte_type == 'custom' %} rte__container{% endif %}">
                        {{- block.settings.content_description -}}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                {%- if block.settings.show_button and block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link != blank %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button button--underline steps__content-button focus-inset"
                    {% if block.settings.button_link == blank %}
                      aria-disabled="true"
                    {% endif %}
                    {% if settings.links_blank and block.settings.button_link == 'external_link' %}
                      target="_blank"
                    {% endif %}
                  >
                    <span>{{- block.settings.button_label | escape -}}</span>
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

