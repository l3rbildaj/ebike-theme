{% doc %}
  @prompt
    a wide screen video autoplay please no text nothing 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.aspect_ratio }}%;
    background-color: #000000;
  }

  .ai-video-element-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 749px) {
    .ai-video-wrapper-{{ ai_gen_id }} {
      padding-bottom: {{ block.settings.mobile_aspect_ratio }}%;
    }
  }
{% endstyle %}

<video-autoplay-{{ ai_gen_id }}
  class="ai-video-block-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-video-wrapper-{{ ai_gen_id }}">
    {% if block.settings.video != blank %}
      <video
        class="ai-video-element-{{ ai_gen_id }}"
        autoplay
        muted
        loop
        playsinline
        {% if block.settings.video_poster %}
          poster="{{ block.settings.video_poster | image_url: width: 2000 }}"
        {% endif %}
      >
        {% for source in block.settings.video.sources %}
          <source src="{{ source.url }}" type="{{ source.mime_type }}">
        {% endfor %}
      </video>
    {% else %}
      <div class="ai-video-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>
</video-autoplay-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoAutoplay{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.video = this.querySelector('.ai-video-element-{{ ai_gen_id }}');
        
        if (this.video) {
          this.ensureAutoplay();
        }
      }

      ensureAutoplay() {
        const playPromise = this.video.play();
        
        if (playPromise !== undefined) {
          playPromise.catch(() => {
            this.video.muted = true;
            this.video.play();
          });
        }
      }
    }

    customElements.define('video-autoplay-{{ ai_gen_id }}', VideoAutoplay{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Autoplay video",
  "tag": null,
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video poster image"
    },
    {
      "type": "header",
      "content": "Desktop settings"
    },
    {
      "type": "range",
      "id": "aspect_ratio",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Aspect ratio",
      "default": 40
    },
    {
      "type": "header",
      "content": "Mobile settings"
    },
    {
      "type": "range",
      "id": "mobile_aspect_ratio",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Aspect ratio",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Autoplay video"
    }
  ]
}
{% endschema %}
